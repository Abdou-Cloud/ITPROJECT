generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bedrijf {
  bedrijf_id     Int         @id @default(autoincrement())
  naam           String
  email          String
  telefoonnummer String
  created_at     DateTime    @default(now())
  updated_at     DateTime    @updatedAt
  klanten        Klant[]
  werknemers     Werknemer[]
}

model Werknemer {
  werknemer_id     Int               @id @default(autoincrement())
  voornaam         String
  naam             String
  email            String            @unique
  telefoonnummer   String
  geboorte_datum   DateTime
  bedrijf_id       Int
  afspraken        Afspraak[]
  beschikbaarheden Beschikbaarheid[]
  bedrijf          Bedrijf           @relation(fields: [bedrijf_id], references: [bedrijf_id])

  @@index([bedrijf_id])
}

model Klant {
  klant_id       Int        @id @default(autoincrement())
  /// Verwijzing naar Clerk user (user_id)
  clerkUserId    String     @unique
  voornaam       String
  naam           String
  email          String
  telefoonnummer String
  geboorte_datum DateTime?  @default(now())
  bedrijf_id     Int?
  afspraken      Afspraak[]
  bedrijf        Bedrijf?   @relation(fields: [bedrijf_id], references: [bedrijf_id])

  @@index([bedrijf_id])
}

model Afspraak {
  afspraak_id  Int       @id @default(autoincrement())
  werknemer_id Int
  klant_id     Int
  start_datum  DateTime
  eind_datum   DateTime
  status       String
  klant        Klant     @relation(fields: [klant_id], references: [klant_id])
  werknemer    Werknemer @relation(fields: [werknemer_id], references: [werknemer_id])

  @@index([werknemer_id])
  @@index([klant_id])
}

model Beschikbaarheid {
  beschikbaarheid_id Int       @id @default(autoincrement())
  werknemer_id       Int
  dag                String
  start_tijd         DateTime
  eind_tijd          DateTime
  werknemer          Werknemer @relation(fields: [werknemer_id], references: [werknemer_id])

  @@index([werknemer_id])
}
